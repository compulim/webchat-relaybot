{
  "name": "echobot",
  "version": "0.0.0-0",
  "description": "MockBot for testing Web Chat",
  "author": "William Wong <compulim@hotmail.com>",
  "license": "MIT",
  "files": [
    "iisnode.yml",
    "lib/**/*",
    "web.config"
  ],
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:babel",
    "build:babel": "babel --out-dir lib src",
    "prestart": "npm run build:babel",
    "start": "concurrently --kill-others --names \"babel,server\" \"npm run start:babel\" \"npm run start:server\"",
    "start:babel": "npm run build:babel -- --skip-initial-build --verbose --watch",
    "start:server": "node-dev --no-deps --no-notify --respawn .",
    "lint": "eslint .",
    "test": "echo \"Warning: no test specified\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "dependencies": {
    "botbuilder": "^4.20.1",
    "dotenv": "^16.3.1",
    "math-random": "^2.0.1",
    "node-fetch": "^3.3.2",
    "pretty-ms": "^8.0.0",
    "restify": "^11.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.23.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "node-dev": "^8.0.0"
  }
}
